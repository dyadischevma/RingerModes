<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewLabelConditionTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewConditionHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/textViewLabelConditionTime"
        app:layout_constraintTop_toTopOf="@+id/textViewLabelConditionTime" />

    <TextView
        android:id="@+id/textViewLabelConditionDelemiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timeDelimiter"
        app:layout_constraintStart_toEndOf="@+id/textViewConditionHours"
        app:layout_constraintTop_toTopOf="@+id/textViewLabelConditionTime" />

    <TextView
        android:id="@+id/textViewConditionMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/textViewLabelConditionDelemiter"
        app:layout_constraintTop_toTopOf="@+id/textViewLabelConditionTime" />


</androidx.constraintlayout.widget.ConstraintLayout>